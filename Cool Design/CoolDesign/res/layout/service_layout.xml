<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff000000"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/appicon"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/topbars" />

            <TextView
                android:id="@+id/service"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:text="SERVICES..."
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="We specialize in"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/graphicdesgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-Graphic Design"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/webdesgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-Web Design"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/albmcvr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-Album Covers"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/logodesgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-Logo Design"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appdesgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-App Design"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tshrtdesgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-T-shirt Design"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tshrtprnting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-T-shirt Printing"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/packagingdesgn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="-Packaging Design"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alltypes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/bgr_txt"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="All types of design..."
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/icon_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/bgr_txt"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/contactus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="Contact us for a quote..."
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/icon_contact" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>